{
  "name": "Zenify",
  "short_name": "Zenify",
  "version": "1.0.0",
  "author": "RedeemedSpoon (QustoTemmo@protonmail.com)",
  "homepage_url": "https://RedeemedSpoon.github.io/Zenify/",
  "description": "An Extension That Tweak Websites & Customize Browsing Experience To Better Suit Your Needs.",
  "manifest_version": 2,
  "incognito": "spanning",
  "browser_specific_settings": {
    "gecko": {
      "id": "{5bd7bac5-f2c3-48b7-a271-9162955c53f9}"
    }
  },
  "icons": {
    "32": "src/icons/icon_32.png",
    "64": "src/icons/icon_64.png",
    "96": "src/icons/icon_96.png"
  },
  "browser_action": {
    "default_title": "Zenify",
    "default_popup": "src/popup.html",
    "default_area": "navbar",
    "default_icon": {
      "32": "src/icons/icon_32.png",
      "64": "src/icons/icon_64.png",
      "96": "src/icons/icon_96.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "src/content.js"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}
