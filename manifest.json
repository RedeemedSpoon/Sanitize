{
  "name": "Sanitize",
  "short_name": "Sanitize",
  "version": "1.0.0",
  "author": "RedeemedSpoon (QustoTemmo@protonmail.com)",
  "homepage_url": "https://RedeemedSpoon.github.io/Sanitize/",
  "description": "An Extension That Tweak Websites & Customize Browsing Experience To Better Suit Your Needs.",
  "manifest_version": 2,
  "incognito": "spanning",
  "browser_specific_settings": {
    "gecko": {
      "id": "{5bd7bac5-f2c3-48b7-a271-9162955c53f9}"
    }
  },
  "icons": {
    "32": "src/icons/logo_32.png",
    "64": "src/icons/logo_64.png",
    "96": "src/icons/logo_96.png"
  },
  "browser_action": {
    "default_title": "Sanitize",
    "default_popup": "src/popup/popup.html",
    "default_area": "navbar",
    "default_icon": {
      "32": "src/icons/logo_32.png",
      "64": "src/icons/logo_64.png",
      "96": "src/icons/logo_96.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false,
    "type": "module"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
